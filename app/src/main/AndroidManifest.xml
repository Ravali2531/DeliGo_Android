<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".DeliGoApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DeliGoAndroid"
        tools:targetApi="31">
        
        <!-- Splash Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Authentication.SignupActivity"
            android:exported="true" />
        
        <activity
            android:name=".Authentication.LoginActivity"
            android:exported="true" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        
        <activity
            android:name=".Authentication.ForgotPasswordActivity"
            android:exported="false" />

        <activity android:name=".Admin.AdminActivity" />
        
        <activity android:name=".Admin.ManageUsersActivity" />

        <activity
            android:name=".Driver.DriverDocumentsActivity"
            android:exported="false" />

        <activity
            android:name=".Driver.DriverHomeActivity"
            android:exported="false" />

        <activity
            android:name=".Restaurant.RestaurantDocumentsActivity"
            android:exported="false" />

        <activity
            android:name=".Restaurant.RestaurantHomeActivity"
            android:exported="false" />

        <activity
            android:name=".Restaurant.AddCustomizationActivity"
            android:theme="@style/Theme.DeliGoAndroid"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".Restaurant.AddOptionActivity"
            android:theme="@style/Theme.DeliGoAndroid"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".Restaurant.AddMenuItemActivity"
            android:theme="@style/Theme.DeliGoAndroid"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".Restaurant.Activities.EditMenuItemActivity"
            android:exported="false"
            android:theme="@style/Theme.DeliGoAndroid"/>

        <activity
            android:name=".Restaurant.LocationPickerActivity"
            android:exported="false"
            android:theme="@style/Theme.DeliGoAndroid"/>

        <activity
            android:name=".Restaurant.StoreInformationActivity"
            android:exported="false"
            android:theme="@style/Theme.DeliGoAndroid"/>

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>

    </application>

</manifest>