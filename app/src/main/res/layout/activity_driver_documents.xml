<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Required Documents"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

    <!-- Government ID Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Government ID Proof"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/govtIdPreview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#EEEEEE"
        android:src="@drawable/passport_placeholder"
        android:scaleType="centerInside"
        android:layout_marginBottom="10dp"/>


    <Button
        android:id="@+id/uploadGovtIdButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Government ID"
        android:layout_marginBottom="30dp"/>

    <!-- Driver's License Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driver's License"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/licensePreview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#EEEEEE"
        android:src="@drawable/driver_license_placeholder"
        android:scaleType="centerInside"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/uploadLicenseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Driver's License"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Documents"
        android:enabled="false"
        android:backgroundTint="#F4A261"/>

</LinearLayout> 