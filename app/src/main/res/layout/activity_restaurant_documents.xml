<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Verification"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>

        <!-- Restaurant Proof Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Registration/License"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/restaurantProofPreview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#EEEEEE"
            android:src="@drawable/id_placeholder"
            android:scaleType="centerInside"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/uploadRestaurantProofButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Restaurant Proof"
            android:layout_marginBottom="30dp"/>

        <!-- Owner ID Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner's Government ID"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/ownerIdPreview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#EEEEEE"
            android:src="@drawable/id_placeholder"
            android:scaleType="centerInside"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/uploadOwnerIdButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Owner's ID"
            android:layout_marginBottom="30dp"/>

        <!-- Business Hours Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Business Hours"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opening Time"
            android:layout_marginBottom="5dp"/>

        <TimePicker
            android:id="@+id/openingTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closing Time"
            android:layout_marginBottom="5dp"/>

        <TimePicker
            android:id="@+id/closingTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Documents"
            android:enabled="false"
            android:backgroundTint="#F4A261"/>

    </LinearLayout>
</ScrollView> 